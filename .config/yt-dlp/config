--downloader aria2c
--no-playlist
--output '%(artist|)s%(artist& - |)s%(title)s.%(ext)s'
--format '(bv+ba/b/b*)[height<=?720][fps<=?30]'
--alias quality,-Q '--format "(bv+ba/b/b*)[height<=?{0}]"'
--prefer-free-formats
--embed-subs
--sub-langs 'ru,rus,en,eng'
--convert-subs vtt
--postprocessor-args FFmpeg:'-map_metadata -1'
--downloader-args ffmpeg:'-avoid_negative_ts make_non_negative'
--remux-video mkv
--console-title
